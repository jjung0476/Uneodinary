<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회계 보고서"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/header_more_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert"
        android:padding="8dp"
        android:contentDescription="더보기"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/header_title"
        app:layout_constraintBottom_toBottomOf="@id/header_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/look_chip_title_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="15dp"
        android:text="전체"
        android:textColor="#ffffff"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/fragment_look_chip_on_background"
        app:layout_constraintTop_toBottomOf="@+id/header_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tag_filter_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/header_title"
        app:layout_constraintStart_toEndOf="@id/look_chip_title_01_tv"
        app:layout_constraintEnd_toEndOf="parent"
        tools:itemCount="4"
        tools:listitem="@layout/item_tag_filter" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/report_sections_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tag_filter_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_report_card"
        tools:itemCount="3"/>

</androidx.constraintlayout.widget.ConstraintLayout>