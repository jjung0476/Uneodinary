<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="@drawable/bg_tag_item"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tag_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="풋살모임"
        android:textSize="16sp"
        android:textColor="@color/gray_800_color"/>

    <ImageButton
        android:id="@+id/button_remove_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Remove Tag"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/gray_400_color"
        android:padding="4dp"/>

</LinearLayout>