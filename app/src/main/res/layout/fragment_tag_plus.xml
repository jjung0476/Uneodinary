<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="닫기"
        android:src="@drawable/ic_close"
        app:tint="@color/gray_700_color"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="태그를 입력해주세요"
        android:textSize="20sp"
        android:textColor="@color/gray_900_color"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/button_close"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_text_tag_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="체육 대회, 11월 20일 모임"
        android:textSize="18sp"
        android:paddingVertical="12dp"
        android:paddingStart="0dp"
        android:paddingEnd="40dp"
        android:singleLine="true"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:background="@drawable/bg_bottom_line_selector"
        android:textColor="@color/gray_900_color"
        android:textColorHint="@color/gray_400_color"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        app:layout_constraintStart_toStartOf="@id/text_title"
        app:layout_constraintEnd_toEndOf="@id/button_close"
        android:layout_marginTop="24dp"/>

    <ImageButton
        android:id="@+id/button_clear_input"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="입력 내용 지우기"
        android:src="@drawable/ic_clear_circle"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="@id/edit_text_tag_input"
        app:layout_constraintTop_toTopOf="@id/edit_text_tag_input"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_tag_input"
        android:layout_marginEnd="-10dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textSize="15sp"
        android:paddingVertical="16dp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_edit_text_rounded"
        android:backgroundTint="#C9CDD4"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>