<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text_rounded"
        android:backgroundTint="#E1F4FF"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/card_p_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_p_back"
            android:contentDescription="P 코인 배경"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/card_p_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="32dp"
            android:contentDescription="P 아이콘"
            android:src="@drawable/ic_p_circle"
            app:layout_constraintEnd_toEndOf="@id/card_p_background"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@id/card_p_background"
            app:layout_constraintTop_toTopOf="@+id/card_p_background" />

        <TextView
            android:id="@+id/card_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="총 지출 금액"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/card_p_background"
            app:layout_constraintStart_toStartOf="@id/card_p_background"
            app:layout_constraintTop_toBottomOf="@id/card_p_icon" />

        <TextView
            android:id="@+id/card_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2EB3FF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/card_p_background"
            app:layout_constraintStart_toStartOf="@id/card_p_background"
            app:layout_constraintTop_toBottomOf="@id/card_label_tv"
            tools:text="NN,NNN원" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/share_icon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share"
        android:contentDescription="공유"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:layout_constraintEnd_toEndOf="@id/card_view"/>

    <TextView
        android:id="@+id/report_date_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11월 20일 보고서"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:layout_constraintStart_toStartOf="@id/card_view"/>

    <TextView
        android:id="@+id/card_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#태그명"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:background="@drawable/bg_edit_text_rounded"
        tools:backgroundTint="#E1F4FF"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/report_date_1"
        app:layout_constraintStart_toStartOf="@id/card_view" />

</androidx.constraintlayout.widget.ConstraintLayout>