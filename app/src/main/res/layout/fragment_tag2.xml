<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_light_color"
        android:gravity="right"
        tools:context=".OnboardingActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/right_icons" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:maxWidth="320dp"
                tools:ignore="UnusedAttribute">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="#태그 생성하기"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#0094E9"
                    android:background="@drawable/bg_edit_text_rounded"
                    android:backgroundTint="#E1F4FF"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공급 관리에서 발생할\n만남들에 이름을 붙여주세요"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900_color"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="만남의 이름을 바탕으로\n지출을 알아서 분리해줘요"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/gray_600_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:background="@color/background_light_color">
            <Button
                android:id="@+id/button_start_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="다음"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="16dp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_edit_text_rounded"
                android:backgroundTint="@color/primary_color"
                android:minHeight="56dp"
                android:elevation="4dp"
                app:cornerRadius="8dp"
                tools:ignore="MissingPrefix"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>